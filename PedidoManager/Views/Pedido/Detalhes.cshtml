@model PedidoDetalhesViewModel

<h2>Detalhes do Pedido</h2>

@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-success">@TempData["Mensagem"]</div>
}

<p><strong>Cliente:</strong> @Model.NomeCliente</p>
<p><strong>Data:</strong> @Model.Data.ToString("dd/MM/yyyy")</p>
<p><strong>Valor Total:</strong> @Model.ValorTotal.ToString("C")</p>

<form asp-action="AlterarStatus" method="post" class="row g-3">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="col-md-6">
        <label class="form-label">Status:</label>
        <select name="novoStatus" class="form-select">
            <option value="Novo" selected="@(Model.Status == "Novo")">Novo</option>
            <option value="Processando" selected="@(Model.Status == "Processando")">Processando</option>
            <option value="Finalizado" selected="@(Model.Status == "Finalizado")">Finalizado</option>
        </select>
    </div>
    <div class="col-md-6"><button type="submit" class="btn btn-primary mt-4">Atualizar</button></div>
</form>

<h4 class="mt-4">Itens do Pedido</h4>
<table class="table table-bordered">
    <thead><tr><th>Produto</th><th>Quantidade</th><th>Preço</th></tr></thead>
    <tbody>
        @foreach (var item in Model.Itens)
        {
            <tr>
                <td>@item.NomeProduto</td>
                <td>@item.Quantidade</td>
                <td>@item.PrecoUnitario.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>