@model PedidoManager.Models.Pedido

<h2>Pedido #@Model.Id</h2>
<p><strong>Cliente:</strong> @Model.Cliente.Nome</p>
<p><strong>Data:</strong> @Model.DataPedido.ToShortDateString()</p>
<p><strong>Status:</strong> @Model.Status</p>
<p><strong>Total:</strong> R$ @Model.ValorTotal.ToString("F2")</p>

<h3>Itens do Pedido</h3>
<table>
    <thead>
        <tr>
            <th>Produto</th>
            <th>Quantidade</th>
            <th>Preço Unitário</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Itens)
        {
            <tr>
                <td>@item.NomeProduto</td>
                <td>@item.Quantidade</td>
                <td>R$ @item.PrecoUnitario.ToString("F2")</td>
                <td>R$ @(item.Quantidade* item.PrecoUnitario).ToString("F2")</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Adicionar" asp-controller="ItemPedido" asp-route-pedidoId="@Model.Id">Adicionar Item</a>