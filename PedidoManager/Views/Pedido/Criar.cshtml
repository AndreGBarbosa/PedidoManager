@model PedidoManager.Models.ViewModels.PedidoViewModel

<form asp-action="Criar" method="post">
    <div class="form-group">
        <label asp-for="Pedido.ClienteId"></label>
        <select asp-for="Pedido.ClienteId" class="form-control"
                asp-items="@(new SelectList(Model.Clientes, "Id", "Nome", Model.Pedido.ClienteId))">
            <option value="">Selecione</option>
        </select>
        <span asp-validation-for="Pedido.ClienteId" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Pedido.ValorTotal" />
    <input type="hidden" asp-for="Pedido.Status" />

    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>