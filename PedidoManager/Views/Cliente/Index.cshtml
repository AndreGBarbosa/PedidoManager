@model IEnumerable<PedidoManager.Models.Cliente>
@{
    ViewData["Title"] = "Lista de Clientes";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-success">@TempData["Mensagem"]</div>
}

<a asp-action="Criar" class="btn btn-success mb-3">Novo Cliente</a>

<input type="text" id="searchInput" class="form-control mb-3 w-50" placeholder="Procure por Nome ou por Email..." />

<table class="table table-hover table-striped table-bordered" id="clientTable">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Registered</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.Email</td>
                <td>@cliente.Telefone</td>
                <td>@cliente.DataCadastro.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@cliente.Id" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Excluir" asp-route-id="@cliente.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Tem certeza de que deseja excluir este cliente?')">Excluir</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $('#searchInput').on('keyup', function () {
            var value = $(this).val().toLowerCase();
            $('#clientTable tbody tr').filter(function () {
                var name = $(this).find('td:eq(0)').text().toLowerCase();
                var email = $(this).find('td:eq(1)').text().toLowerCase();
                $(this).toggle(name.includes(value) || email.includes(value));
            });
        });
    </script>
}